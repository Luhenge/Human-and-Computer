<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UNAM Student Representation Council Election 2025</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }
        header {
            background-color: #333;
            color: #fff;
            padding: 15px 0;
            text-align: center;
        }
        .container {
            width: 80%;
            margin: auto;
            overflow: hidden;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }
        .button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            color: #fff;
            background-color: #007bff;
            border-radius: 5px;
            text-decoration: none;
            margin: 10px 0;
        }
        .button:hover {
            background-color: #0056b3;
        }
        .hidden {
            display: none;
        }
        .show {
            display: block;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
        }
        .form-group input[type="text"], .form-group select {
            width: 100%;
            padding: 8px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }
        .form-group input[type="submit"] {
            background-color: #28a745;
            color: #fff;
            border: none;
            cursor: pointer;
        }
        .form-group input[type="submit"]:hover {
            background-color: #218838;
        }
        .candidates {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .candidate {
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            text-align: center;
            padding: 10px;
            width: 200px;
        }
        .candidate img {
            width: 100%;
            height: auto;
            border-bottom: 1px solid #ddd;
        }
        .candidate h3 {
            margin: 10px 0 5px;
        }
        .candidate p {
            margin: 0;
        }
    </style>
</head>
<body>
    <header>
        <h1>University of Namibia</h1>
        <h2>Student Representation Council Election 2025</h2>
    </header>
    
    <!-- Login Page -->
    <div id="login-page" class="container show">
        <h2>Login</h2>
        <form action="#candidate-selection-page">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="text" id="password" name="password" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit">
            </div>
        </form>
    </div>

    <!-- Candidate Selection Page -->
    <div id="candidate-selection-page" class="container hidden">
        <h2>Select Your Candidate</h2>
        <form action="#submission-page">
            <h3>President</h3>
            <div class="candidates">
                <div class="candidate">
                    <img src="https://picsum.photos/200?random=1" alt="Frans Luhenge">
                    <h3>Frans Luhenge</h3>
                    <p>Candidate for President</p>
                    <input type="radio" name="president" value="Frans Luhenge">
                </div>
                <div class="candidate">
                    <img src="https://picsum.photos/200?random=2" alt="Soin Uukule">
                    <h3>Soin Uukule</h3>
                    <p>Candidate for President</p>
                    <input type="radio" name="president" value="Soin Uukule">
                </div>
            </div>
            <h3>Vice President</h3>
            <div class="candidates">
                <div class="candidate">
                    <img src="https://picsum.photos/200?random=3" alt="Itava Shikongo">
                    <h3>Itava Shikongo</h3>
                    <p>Candidate for Vice President</p>
                    <input type="radio" name="vice-president" value="Itava Shikongo">
                </div>
                <div class="candidate">
                    <img src="https://picsum.photos/200?random=4" alt="Tomas Maxer">
                    <h3>Tomas Maxer</h3>
                    <p>Candidate for Vice President</p>
                    <input type="radio" name="vice-president" value="Tomas Maxer">
                </div>
            </div>
            <h3>SRC for Information</h3>
            <div class="candidates">
                <div class="candidate">
                    <img src="https://picsum.photos/200?random=5" alt="Shawana Metiti">
                    <h3>Shawana Metiti</h3>
                    <p>Candidate for SRC for Information</p>
                    <input type="radio" name="src-info" value="Shawana Metiti">
                </div>
                <div class="candidate">
                    <img src="https://picsum.photos/200?random=6" alt="Mathes Nochance">
                    <h3>Mathes Nochance</h3>
                    <p>Candidate for SRC for Information</p>
                    <input type="radio" name="src-info" value="Mathes Nochance">
                </div>
            </div>
            <h3>SRC for Academic</h3>
            <div class="candidates">
                <div class="candidate">
                    <img src="https://picsum.photos/200?random=7" alt="David David">
                    <h3>David David</h3>
                    <p>Candidate for SRC for Academic</p>
                    <input type="radio" name="src-academic" value="David David">
                </div>
                <div class="candidate">
                    <img src="https://picsum.photos/200?random=8" alt="Lydia Lady">
                    <h3>Lydia Lady</h3>
                    <p>Candidate for SRC for Academic</p>
                    <input type="radio" name="src-academic" value="Lydia Lady">
                </div>
            </div>
            <h3>SRC for Financially</h3>
            <div class="candidates">
                <div class="candidate">
                    <img src="https://picsum.photos/200?random=9" alt="Drotea Frans">
                    <h3>Drotea Frans</h3>
                    <p>Candidate for SRC for Financially</p>
                    <input type="radio" name="src-financial" value="Drotea Frans">
                </div>
                <div class="candidate">
                    <img src="https://picsum.photos/200?random=10" alt="Rosalia Johannes">
                    <h3>Rosalia Johannes</h3>
                    <p>Candidate for SRC for Financially</p>
                    <input type="radio" name="src-financial" value="Rosalia Johannes">
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit">
            </div>
        </form>
    </div>

    <!-- Submission Confirmation Page -->
    <div id="submission-page" class="container hidden">
        <h2>Submission Confirmation</h2>
        <p>Thank you for your submission!</p>
        <p>Your vote has been recorded. The election process is now complete.</p>
        <a href="#login-page" class="button">Go to Login Page</a>
    </div>

    <script>
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function(event) {
                event.preventDefault();
                const currentPageId = this.closest('div').id;
                let nextPageId;
                if (currentPageId === 'login-page') {
                    nextPageId = 'candidate-selection-page';
                } else if (currentPageId === 'candidate-selection-page') {
                    nextPageId = 'submission-page';
                } else {
                    nextPageId = 'login-page'; // Go back to login page
                }
                document.querySelectorAll('.container').forEach(container => {
                    container.classList.remove('show');
                    container.classList.add('hidden');
                });
                document.getElementById(nextPageId).classList.remove('hidden');
                document.getElementById(nextPageId).classList.add('show');
            });
        });
    </script>
</body>
</html>
